{
  "description": "Laminark: persistent adaptive memory for Claude Code",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"${CLAUDE_PLUGIN_ROOT}/scripts/ensure-deps.sh\" node \"${CLAUDE_PLUGIN_ROOT}/dist/hooks/handler.js\"",
            "statusMessage": "Loading Laminark memory context...",
            "timeout": 10
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash \"${CLAUDE_PLUGIN_ROOT}/scripts/ensure-deps.sh\" node \"${CLAUDE_PLUGIN_ROOT}/dist/hooks/handler.js\"",
            "async": true,
            "timeout": 30
          }
        ]
      }
    ],
    "PostToolUseFailure": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash \"${CLAUDE_PLUGIN_ROOT}/scripts/ensure-deps.sh\" node \"${CLAUDE_PLUGIN_ROOT}/dist/hooks/handler.js\"",
            "async": true,
            "timeout": 30
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash \"${CLAUDE_PLUGIN_ROOT}/scripts/ensure-deps.sh\" node \"${CLAUDE_PLUGIN_ROOT}/dist/hooks/handler.js\"",
            "async": true,
            "timeout": 15
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash \"${CLAUDE_PLUGIN_ROOT}/scripts/ensure-deps.sh\" node \"${CLAUDE_PLUGIN_ROOT}/dist/hooks/handler.js\"",
            "async": true,
            "timeout": 15
          }
        ]
      }
    ]
  }
}
